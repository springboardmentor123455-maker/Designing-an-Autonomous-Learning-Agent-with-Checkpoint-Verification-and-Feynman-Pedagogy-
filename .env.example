# GitHub Models API (Free tier - recommended for getting started)
# Get your GitHub Personal Access Token from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here
#Based on the github token to access the github models but 12 requests per day only
# Alternative: OpenAI API Key
# OPENAI_API_KEY=your_openai_api_key_here

# Web Search API - SerpAPI (Primary)
# Get your API key from: https://serpapi.com/
SERP_API_KEY=your_serpapi_key_here

# DuckDuckGo Search (Free fallback, no API key required)
# Automatically used if SerpAPI fails


MODEL_PROVIDER=azure

# Validation Model (for fast, cheap scoring)
# Uses gpt-4o-mini by default for cost-effective relevance scoring
VALIDATION_MODEL=your_model_name_here


AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name_here
AZURE_OPENAI_API_VERSION=api_version_here







UNDERSTANDING_THRESHOLD=0.55  # 55% minimum score to pass checkpoint (lowered for better success rate)
MAX_RETRIES=3  # Maximum retry attempts for context gathering
CHUNK_SIZE=500  # Text chunk size for embeddings (smaller for better granularity)